<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/word_bg"
    android:alpha="0.5"
    android:gravity="center"
    android:layout_margin="@dimen/words_container_margin">

    <TextView
        android:id="@+id/word_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/word_margin_sides"
        android:layout_marginEnd="@dimen/word_margin_sides"
        android:textColor="@color/white"
        android:textSize="@dimen/word_text_size"/>

    <ImageButton
        android:id="@+id/word_close"
        android:layout_width="@dimen/word_close_size"
        android:layout_height="@dimen/word_close_size"
        android:src="@drawable/ic_close_white"
        android:padding="@dimen/word_close_padding"
        android:background="@drawable/word_close_button"
        android:layout_marginTop="@dimen/word_margin"
        android:layout_marginBottom="@dimen/word_margin"
        android:layout_marginEnd="@dimen/word_margin"/>

</LinearLayout>
