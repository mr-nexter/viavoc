<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="true" android:state_pressed="true" android:state_activated="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="#090617"
                android:centerColor="#1F1641"
                android:endColor="#6E4589"
                android:angle="45"/>
            <corners android:radius="@dimen/report_send_button_radius"/>
        </shape>
    </item>
    <item android:state_active="true" android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="#090617"
                android:centerColor="#1F1641"
                android:endColor="#6E4589"
                android:angle="-45"/>
            <corners android:radius="@dimen/report_send_button_radius"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient
                android:startColor="#090617"
                android:centerColor="#1F1641"
                android:endColor="#6E4589"
                android:angle="-45"/>
            <corners android:radius="@dimen/report_send_button_radius"/>
        </shape>
    </item>
</selector>